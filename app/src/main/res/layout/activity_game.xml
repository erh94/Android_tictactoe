<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.hlab.swlab.GameActivity"
    android:gravity="fill_vertical"
    android:weightSum="1"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/gametoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.23">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart Game" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tictacgrid"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center">

        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:autoSizeMaxTextSize="15dip"
            android:text=" "
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/one"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/one"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/two"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/two"
            android:padding="0dp"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/one"
            android:layout_marginLeft="5dp"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/four"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/four"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/five"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/five"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/four"
            android:layout_marginLeft="5dp"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/seven"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/seven"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/eight"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/eight"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>
